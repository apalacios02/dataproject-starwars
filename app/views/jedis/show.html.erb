<!-- app/views/jedis/show.html.erb -->
<div class="max-w-xl mx-auto">
  <h1 class="text-3xl font-semibold mb-4"><%= @jedi.name %></h1>
  
  <p class="mb-4"><strong>Homeworld:</strong> <%= @jedi.homeworld %></p>
  
  <p class="mb-4"><strong>Lightsaber Color:</strong> <%= @jedi.lightsaber_color %></p>
  
  <p class="mb-4"><strong>Jedi Story:</strong> <%= @jedi.jedi_story %></p>
  
  <% if @jedi.image.attached? %>
    <div class="mb-4">
      <%= image_tag @jedi.image %>
    </div>
  <% end %>

  <%= link_to 'Back', jedis_path, class: "text-gray-500 hover:underline mb-4 inline-block" %>
  
  <%= link_to 'Edit', edit_jedi_path(@jedi), class: "text-blue-600 hover:underline mb-4 inline-block mx-4" %>
  
  <%= link_to 'Delete', @jedi, method: :delete, data: { confirm: "Are you sure you want to delete this Jedi profile?" }, class: "text-red-600 hover:underline mb-4 inline-block", title: "Delete" %>
</div>
