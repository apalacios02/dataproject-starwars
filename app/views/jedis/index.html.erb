<!-- app/views/jedis/index.html.erb -->
<div class="mb-8">
  <h1 class="text-3xl font-semibold mb-4">Jedi Profiles</h1>

  <ul class="space-y-4">
    <% @jedis.each do |jedi| %>
      <li class="bg-white shadow-md rounded-lg px-4 py-3 flex justify-between items-center">
        <%= link_to jedi.name, jedi, class: "text-blue-600 hover:underline" %>
        <%= link_to "Edit", edit_jedi_path(jedi), class: "text-green-600 hover:underline" %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'New Jedi Profile', new_jedi_path, class: "mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="mt-8 text-center">
  <%= link_to 'Back to Home', root_path, class: "text-gray-500 hover:underline" %>
</div>
